<% content_for(:title, " #{@line.color} | Bus System") %>

<div class = "row">
   <div class = "col-lg-12">
    <img src="http://www.designomite.com/media/catalog/product/cache/1/image/9df78eab33525d08d6e5fb8d27136e95/j/_/j_line_mta_nyc_subway.jpg" height="5%" width="5%" class="pull-left">
    <h4><%= @line.color %></h4>
   </div>
</div>

<div class = "row">
   <div class = "col-lg-12">
    <h5>Stations:</h5>
    <% @line.stations.each do |station| %>
      <h6><%= station.name %></h6>
    <% end %>
   </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="btn-group">
      <%= link_to "Edit", edit_line_path(@line), :class => 'btn btn-sm btn-warning' %>
      <%= link_to "Add Station", {:controller => "stops", :action => "new", :line_id => @line.id}, :class => 'btn btn-sm btn-primary' %>
      <%= link_to "Delete", line_path(@line),
                                :confirm => "Are You Sure?",
                                :method => :delete,
                                :class => "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>
