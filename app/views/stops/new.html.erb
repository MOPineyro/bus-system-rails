<%= form_for(@stop, :html => {:class => "form-inline"}) do |f| %>
  <div class="form-group">
    <%= f.label :line_id %>
    <%= f.collection_select(:line_id, Line.all, :id, :color, prompt: true, selected: params[:line_id] ) %>
  </div>

  <div class="form-group">
    <%= f.label :station_id %>
    <%= f.collection_select(:station_id, Station.all, :id, :name, prompt: true) %>
  </div>
  <%= f.submit(:class => 'btn btn-success') %>
<% end %>
