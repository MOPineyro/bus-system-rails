<% content_for(:title, " #{@station.name} | Bus System") %>

<div class = "row">
   <div class = "col-lg-12">
    <h5>Lines at <%= @station.name %> Station:</h5>
       <% @station.lines.each do |line| %>
        <h6><%= line.color %></h6>
      <% end %>
   </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="btn-group">
      <%= link_to "Edit", edit_station_path(@station), :class => 'btn btn-sm btn-warning' %>
      <%= link_to "Add Line", {:controller => "stops", :action => "new", :station_id => @station.id}, :class => 'btn btn-sm btn-primary' %>
      <%= link_to "Delete", station_path(@station),
                                :confirm => "Are You Sure?",
                                :method => :delete,
                                :class => "btn btn-sm btn-danger" %>
    </div>
  </div>
</div>


